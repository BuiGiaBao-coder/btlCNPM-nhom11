@page
@model ScoreManagement.Pages.AdminMenu.ClassCoursesManage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassCourse[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassCourse[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassCourse[0].Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClassCourse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.LecturerName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClassCourseId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClassCourseId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClassCourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
