@page
@model ScoreManagement.Pages.AdminMenu.MajorManage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Major[0].MajorCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major[0].MajorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Major) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MajorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MajorName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MajorId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MajorId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MajorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
