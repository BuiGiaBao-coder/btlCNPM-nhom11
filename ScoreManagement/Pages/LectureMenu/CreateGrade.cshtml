@page "{StudentId:int}"
@model ScoreManagement.Pages.LectureMenu.CreateGradeModel
@{
    ViewData["Title"] = "Tạo Điểm";
}

<h2>Tạo Điểm cho Sinh Viên - @Model.StudentName</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="StudentGrade.Assignment1">Assignment 1</label>
        <input type="number" asp-for="StudentGrade.Assignment1" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.Assignment2">Assignment 2</label>
        <input type="number" asp-for="StudentGrade.Assignment2" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.Assignment3">Assignment 3</label>
        <input type="number" asp-for="StudentGrade.Assignment3" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.ProgressTest1">Progress Test 1</label>
        <input type="number" asp-for="StudentGrade.ProgressTest1" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.ProgressTest2">Progress Test 2</label>
        <input type="number" asp-for="StudentGrade.ProgressTest2" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.ProgressTest3">Progress Test 3</label>
        <input type="number" asp-for="StudentGrade.ProgressTest3" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StudentGrade.FinalExam">Final Exam</label>
        <input type="number" asp-for="StudentGrade.FinalExam" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Tạo Điểm</button>
</form>

<a href="@Url.Page("/LectureMenu/StudentGrades", new { StudentId = Model.StudentId })" class="btn btn-secondary mt-3">Q
